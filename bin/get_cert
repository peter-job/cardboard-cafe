#!/bin/bash

display_usage() { 
	echo "Setup a ssl certificate on the server."
    echo "This script must be run with super-user privileges."
	} 

if [[ ( $1 == "--help") ||  $1 == "-h" ]] 
then 
    display_usage
    exit 0
fi 

USER=$(whoami)
if [[ $USER != "root" ]]; then 
    echo $USER
    echo "This script must be run as root!" 
    exit 1
fi 

apt install certbot
certbot certonly --standalone --preferred-challenges http -d cardboard.cafe